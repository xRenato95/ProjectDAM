<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/friend_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/friend_number"
        android:src="@mipmap/persondefault" />

    <TextView
        android:id="@+id/friend_name"
        android:text="@string/list_value_name"
        android:textSize="17sp"
        android:layout_marginLeft="2dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/friend_image"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/friend_number"
        android:text="@string/list_value_number"
        android:textSize="17sp"
        android:layout_marginLeft="2dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/friend_image"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/friend_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4d6d6"
        android:layout_below="@+id/friend_number"
        android:id="@+id/friend_view" />
</RelativeLayout>